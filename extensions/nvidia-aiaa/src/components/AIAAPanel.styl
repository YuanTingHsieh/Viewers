//AEH Nvidia CSS
.aiaaPanel
  background-color: var(--primary-background-color)
  height: 100%
  width: 96%
  display: flex
  flex-direction: column
  color: var(--text-primary-color)
  padding: 10px 0px 10px 10px

  .aiaaButton
    border: 1px solid var(--ui-border-color-active)
    border-radius: 15px
    background-color: var(--active-color)
    color: var(--ui-gray-dark)
    line-height: 25px
    padding: 0 15px
    outline: none
    cursor: pointer

    &:hover, &:active
      background-color: var(--ui-sky-blue)

    svg
      margin-right: 4px
      position: relative
      top: 2px

  .aiaaDropDown
    width: 100%

  .aiaaInput
    width: 100%

  .aiaaTable
    border-collapse: collapse;
    border: 0px solid;
    width: 100%;

  .aiaaTable tr td
    border: 0px solid;

  .tabs {
    position: relative;
    margin: 1rem 0;
    background: #2B2A28;
  }

  .tabs::before,
  .tabs::after {
    content: "";
    display: table;
  }

  .tabs::after {
    clear: both;
  }

  .tab {
    float: left;
  }

  .tab-switch {
    display: none;
  }

  .tab-label {
    position: relative;
    display: block;
    line-height: 2.6em;
    height: 2.8em;
    padding: 0 1.618em;
    background: #2B2A28;
    border-right: 1px dotted #575654;
    color: #fff;
    cursor: pointer;
    top: 0;
    transition: all 0.25s;
    font-size: 11px;
  }

  .tab-label:hover {
    top: -0.25rem;
    transition: top 0.25s;
  }

  .tab-content {
    height: 20rem;
    position: absolute;
    z-index: 1;
    top: 2.75em;
    left: 0;
    padding: 1rem;
    background: #2B2A28;
    border-bottom: 0.25rem solid #B2A28;
    opacity: 0;
    transition: all 0.35s;
    width: 100%;
  }

  .tab-switch:checked+.tab-label {
    background: #EB4E01;
    color: #fff;
    border-bottom: 0;
    border-right: 1px dotted #575654;
    transition: all 0.35s;
    z-index: 1;
    top: -0.0625rem;
  }

  .tab-switch:checked+label+.tab-content {
    z-index: 2;
    opacity: 1;
    transition: all 0.35s;
  }
